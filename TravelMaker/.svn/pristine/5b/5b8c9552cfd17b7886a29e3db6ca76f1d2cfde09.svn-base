<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/makeBackground"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent" >


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <TextView
            android:id="@+id/timeCountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/startTimePicker"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/timeCountNumberPicker"
            android:gravity="center_vertical"
            android:text="@string/make_time_count"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <NumberPicker
            android:id="@+id/timeCountNumberPicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/startTimeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/startTimePicker"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@+id/timeCountText"
            android:layout_alignTop="@+id/startTimePicker"
            android:gravity="center_vertical"
            android:text="@string/make_start_time"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TimePicker
            android:id="@+id/startTimePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/timeCountNumberPicker"
            android:layout_toRightOf="@+id/startTimeText" />

        <TextView
            android:id="@+id/timeSpaceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/timeSpaceNumberPicker"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@+id/startTimeText"
            android:layout_alignTop="@+id/timeSpaceNumberPicker"
            android:gravity="center_vertical"
            android:text="@string/make_time_space"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <NumberPicker
            android:id="@+id/timeSpaceNumberPicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/startTimePicker"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/breakTimeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/breakTimeNumberPicker"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@+id/timeSpaceText"
            android:layout_alignTop="@+id/breakTimeNumberPicker"
            android:gravity="center_vertical"
            android:text="@string/make_break_time"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <NumberPicker
            android:id="@+id/breakTimeNumberPicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/timeSpaceNumberPicker"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:id="@+id/makeTableBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/breakTimeText"
            android:text="@string/make_button" />

    </RelativeLayout>

</ScrollView>